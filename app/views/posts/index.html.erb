<div class="contents row">
  <% @posts.each do |post| %>
    <div class="content_post" >
    <div class="more">
        <span><%= image_tag 'carute.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', post_path(post.id), method: :get %>
          </li>
          <li>
            <%= link_to '編集', edit_post_path(post.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', post_path(post.id), method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= post.symptom.name %></p>
      <div class="content_advice">
        <p><%= post.advice.name %></p>
      <span class="name">
        <%= post.user.nickname %>
      </span>

    </div>
  <% end %>
</div>
