<div class="content_post" >
  <div class="more">
      <span><%= image_tag 'carute.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '詳細', post_path(post.id), method: :get %>
        </li>
        <% if user_signed_in? && current_user.id == post.user_id %>
        <li>
          <%= link_to '編集', edit_post_path(post.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', post_path(post.id), method: :delete %>
        </li>
        <% end %>
      </ul>
  </div>
  <div class="content_advices">
     <div class="content_advice-1">
        <p><%= post.symptom.name %></p>
     </div>
     <div class="content_advice-2">
        <p><%= post.advice.name %></p>
     </div>
     <div class="content_advice-3">
        <p><%= "#{post.child_age}才" %></p>
     </div>  
      <span class="name">
        <a href="/users/<%= post.user.id %>">
        <%= post.user.nickname %>
      </span>
  </div>
</div>